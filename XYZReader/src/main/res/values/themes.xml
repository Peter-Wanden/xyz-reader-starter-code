<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- Theme for the main list activity -->
    <style name="AppTheme.Home">
        <item name="android:windowExitTransition">@android:transition/explode</item>
        <item name="android:windowReenterTransition">@android:transition/explode</item>
    </style>

    <!-- Theme for the detail activity -->
    <style name="AppTheme.Detail">
        <item name="android:windowExitTransition">@android:transition/explode</item>
        <item name="android:windowReenterTransition">@android:transition/slide_bottom</item>
    </style>

</resources>